<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_recommend_live_layout">
    <com.kys.player.example.selfview.HeiTiTextView
        android:id="@+id/tv_title"
        style="@style/blue_5fb6e8_26_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"/>
    <com.kys.player.example.customview.MyHorizontalScrollView
        android:id="@+id/live_cat_hori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:scrollbars="none"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/live_cat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.kys.player.example.customview.MyHorizontalScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_f7f7f7"/>
</LinearLayout>